@model QLBH_64131491.Models.Model_64131491.Order_64131491

@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="mb-4">Thanh toán đơn hàng</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin giao hàng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <div class="mb-3">
                            <label class="form-label">Họ tên người nhận</label>
                            <input type="text" class="form-control" name="ShippingName" value="@Model.KhachHang?.HoTen" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" name="ShippingPhone" value="@Model.KhachHang?.SoDienThoai" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ giao hàng</label>
                            <textarea class="form-control" name="ShippingAddress" rows="3" required>@Model.ShippingAddress</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán</label>
                            <select class="form-select" name="PaymentMethod" required>
                                <option value="">Chọn phương thức thanh toán</option>
                                <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                                <option value="BANK">Chuyển khoản ngân hàng</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" name="Notes" rows="2">@Model.Notes</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Đặt hàng</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Tổng quan đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Tạm tính:</td>
                                    <td class="text-end">@(Model.TotalAmount?.ToString("#,##0") ?? "0") đ</td>
                                </tr>
                                <tr>
                                    <td>Giảm giá:</td>
                                    <td class="text-end">@Model.Discount.ToString("#,##0") đ</td>
                                </tr>
                                <tr>
                                    <td><strong>Thành tiền:</strong></td>
                                    <td class="text-end"><strong>@(Model.FinalAmount?.ToString("#,##0") ?? "0") đ</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Chi tiết sản phẩm</h5>
                    </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@item.Smartphone.Brand @item.Smartphone.Model</td>
                                        <td class="text-end">@item.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 