@model QLBH_64131491.Models.Model_64131491.NhanVien_64131491
@{
    ViewData["Title"] = "Xóa nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2 class="mb-4 text-danger">Xóa nhân viên</h2>
    <div class="alert alert-warning">Bạn có chắc chắn muốn xóa nhân viên này không?</div>
    <dl class="row">
        <dt class="col-sm-3">Mã nhân viên</dt>
        <dd class="col-sm-9">@Model.MaNV</dd>
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>
        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.SoDienThoai</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Quyền sử dụng</dt>
        <dd class="col-sm-9">@Model.QuyenSuDung</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaNV" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div> 