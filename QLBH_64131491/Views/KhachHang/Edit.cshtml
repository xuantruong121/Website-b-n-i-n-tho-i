@model QLBH_64131491.Models.Model_64131491.KhachHang_64131491
@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2 class="mb-4">Chỉnh sửa khách hàng</h2>
